class Solution: 
    def threeSumClosest(self, nums: List[int], target: int) -> int:
        nums.sort()
        res = float(inf)
        for i in range(len(nums)-2):
            l, r = i+1, len(nums)-1
            while l < r:
                ans = nums[i] + nums[l] + nums[r]
                if ans == target:
                    return ans
                elif ans < target:
                    l += 1
                else:
                    r -= 1
                if abs(ans - target) < abs(res - target):
                    res = ans
        return res    
        
